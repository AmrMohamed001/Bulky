@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}
<style>
    .access-denied {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .glass-card {
        background: #fff;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .card-gradient {
        background: #343a40;
    }

    .back-btn {
        color: #343a40;
        border-color: #343a40;
        transition: all 0.3s ease;
    }

        .back-btn:hover {
            background-color: #343a40;
            color: white;
        }

    .error-icon {
        font-size: 5rem;
        color: #dc3545;
    }
</style>

<div class="access-denied">
    <div class="container">
        <div class="card glass-card border-0">
            <div class="card-header card-gradient text-light py-4">
                <div class="text-center" data-aos="fade-down">
                    <h2 class="text-white fw-bold mb-0">Access Denied</h2>
                </div>
            </div>
            <div class="card-body p-5">
                <div class="text-center" data-aos="fade-up">
                    <i class="bi bi-shield-lock error-icon mb-4"></i>
                    <h3 class="mb-4">You don't have permission to access this resource</h3>
                    <p class="text-muted mb-4">
                        Sorry, but you don't have the necessary permissions to view this page.
                        Please contact your administrator if you believe this is a mistake.
                    </p>
                    <a href="/" class="back-btn btn btn-outline-dark px-4 py-2">
                        <i class="bi bi-house me-2"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
}