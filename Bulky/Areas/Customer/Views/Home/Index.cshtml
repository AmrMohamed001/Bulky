@model IEnumerable<Product>

<div class="row g-5">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card border-0 shadow-hover-lg rounded-4 overflow-hidden h-100 transition-all">
                <div class="position-relative overflow-hidden">
                    <img src="@product.ImageUrl"
                         class="card-img-top img-fluid scale-hover"
                         alt="@product.Title"
                         style="height: 280px; object-fit: cover;">
                    <div class="image-overlay"></div>
                </div>
                <div class="card-body text-center px-4 pb-4 pt-3">
                    <h5 class="card-title text-dark text-uppercase fw-bold mb-3 fs-6">@product.Title</h5>
                    <p class="text-muted mb-2 small">by <b class="text-primary">@product.Author</b></p>
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <p class="text-muted small mb-0">
                            <span class="text-decoration-line-through text-danger">@product.ListPrice.ToString("c")</span>
                        </p>
                        <p class="fw-semibold text-success mb-0">
                            @product.Price100.ToString("c")
                        </p>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center px-4 pb-4 pt-0">
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary rounded-pill fw-semibold px-4 py-2 btn-hover">
                        View Details
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .shadow-hover-lg {
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .shadow-hover-lg:hover {
            box-shadow: 0 12px 32px rgba(0,0,0,0.12);
            transform: translateY(-5px);
        }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, rgba(0,0,0,0) 70%, rgba(0,0,0,0.05) 100%);
    }

    .scale-hover {
        transition: transform 0.3s ease;
    }

        .scale-hover:hover {
            transform: scale(1.05);
        }

    .btn-hover {
        transition: all 0.3s ease;
        width: auto;
        min-width: 160px;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,80,255,0.2);
        }

    .transition-all {
        transition: all 0.3s ease;
    }

    .card-body {
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(8px);
    }
</style>